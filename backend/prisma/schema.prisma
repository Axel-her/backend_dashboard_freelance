// 1. Datasource
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

// 2. Generator
generator client {
  provider = "prisma-client-js"
}

// 3. model
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  nom      String
  prenom   String
  missions  Mission[] 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Mission {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  tjm       Int
  duree     Int
  client    String
  startDate DateTime?
  userId    Int     
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
